---
import Layout from "../../layouts/Layout.astro";
import { getAllSVG } from "../../../backend/backend";

const SVGs = await getAllSVG();
---

<Layout>
  <div class="flex flex-col h-full glass bg-primary p-8 pt-24 gap-6">
    <div class="flex flex-wrap gap-4">
      {
        SVGs?.map((SVG) => (
          <a href=`/gallery/${SVG.id}` class="bg-white rounded-lg w-fit h-fit p-4 justify-center items-center shadow-md">
            <h2 class="text-xl font-bold">{SVG.name}</h2>
            <div
              class="flex items-center justify-center w-[300px] h-[300px] rounded-lg overflow-hidden"
              set:html={SVG.code_svg}
            />
          </a>
        ))
      }
    </div>
  </div>
    <div class="flex flex-col h-full glass bg-primary p-8 pt-24 gap-6">
    <div class="flex h-full w-full gap-4">
      <div
        id="svg-container"
        class="flex items-center justify-center h-full w-full bg-white rounded-lg shadow-md"
      >
      </div>
      <div
        id="svg-output"
        class="flex h-full w-full bg-slate-900 rounded-lg text-white shadow-md overflow-hidden"
      >
      </div>
    </div>
</Layout>
