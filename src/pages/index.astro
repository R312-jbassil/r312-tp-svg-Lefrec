---
import Layout from "../layouts/Layout.astro";

import { ui } from "../i18n/ui.js";

const locale = (Astro.locals.lang as "en" | "fr") ?? "en";
console.log("Locale in index:", locale);
---

<Layout>
  <div
    class="flex flex-col h-full items-center justify-center glass bg-base-200 p-8"
  >
    <h1 class="text-4xl font-bold mb-4">
      {ui[locale].index.title}
    </h1>
    <p class="mb-6 text-lg">
      {ui[locale].index.description}
    </p>
    <div class="flex gap-4">
      <a href="/generator" class="btn btn-secondary"
        >{ui[locale].index.button}</a
      >
      <a href="/gallery/" class="btn btn-primary">{ui[locale].index.library}</a>
    </div>
  </div>
</Layout>
